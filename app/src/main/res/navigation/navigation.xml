<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/pokemonListFragment">

    <fragment
        android:id="@+id/pokemonListFragment"
        android:name="com.example.pokemonapp.ui.list.ListFragment"
        android:label="PokemonListFragment" >
        <action
            android:id="@+id/action_pokeListFragment_to_pokeDetailsFragment"
            app:destination="@id/pokemonDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/pokemonDetailFragment"
        android:name="com.example.pokemonapp.ui.detail.DetailsFragment"
        android:label="fragment_pokemon_detail"
        tools:layout="@layout/fragment_detail">
        <argument
            android:name="pokemonName"
            app:argType="string"/>
    </fragment>

</navigation>
